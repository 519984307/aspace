# Maintainer: Astrea Wang <wangyixue@uniontech.com>
pkgname=aspace
pkgver=1.0.0
pkgrel=1
pkgdesc='Deepin desktop-environment - space module'
arch=('x86_64')
url="https://github.com/asterwyx/aspace"
license=('GPL3')
depends=('qt5-svg' 'libdbusmenu-qt5')
makedepends=('git' 'cmake' 'ninja' 'qt5-tools' 'gtest' 'gmock' 'dtkcommon-git' 'dtkcore-git')
source=('source.tar.gz')
sha512sums=('SKIP')

prepare() {
    cd $deepin_source_name
}

build() {
  cd $deepin_source_name
  cmake . -GNinja -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=lib
  ninja
}

package() {
  cd $deepin_source_name
  DESTDIR="$pkgdir" ninja install
}
